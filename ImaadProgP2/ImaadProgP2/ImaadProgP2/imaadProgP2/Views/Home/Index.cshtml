@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Font Awesome -->
    <style>
        body {
            background-size: cover;
            background-position: center;
            background-color: #3c9a56;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .content {
            flex: 1;
        }

        .main-header {
            background-color: rgba(0, 51, 102, 0.8);
            color: #ffffff;
            padding: 80px 0;
            text-align: center;
            backdrop-filter: blur(10px);
        }

        .main-header h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #ffdd57;
        }

        .main-header p {
            font-size: 1.3rem;
            margin-bottom: 30px;
            color: #f0e68c;
        }

        .btn-primary {
            background-color: #ff6f61;
            border-color: #ff6f61;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 1.1rem;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #e65c54;
            border-color: #d94540;
            transform: translateY(-5px);
            box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        }

        .features {
            margin-top: 50px;
            padding: 50px 0;
            background-color: #f0f0f0;
        }

        .feature-box {
            padding: 30px;
            border-radius: 12px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .feature-box:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }

        .feature-box h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #0056b3;
        }

        .feature-box p {
            font-size: 1rem;
            color: #333;
        }

        .footer {
            background-color: #0056b3;
            color: #f8f9fa;
            padding: 20px 0;
            text-align: center; /* Center the footer text */
        }

        .footer a {
            color: #ffdd57; /* Icon color */
            margin: 0 10px;
            font-size: 1.5rem;
            transition: color 0.3s ease;
            display: inline-block; /* Ensure they are inline */
        }

        .footer a:hover {
            color: #e0e0e0; /* Hover color */
        }

        .social-icons {
            margin-top: 10px;
        }

        .progress-bar {
            background-color: #ff6f61;
        }

        @@media (max-width: 768px) {
            .main-header h1 {
                font-size: 2.5rem;
            }

            .main-header p {
                font-size: 1.1rem;
            }
        }
    </style>
</head>

<body>
    <div class="content">
        <header class="main-header">
            <div class="container">
                <h1 class="display-4">Welcome to Contract Monthly Claim System (CMCS)</h1>
                <p>Your streamlined solution for managing monthly claims.</p>
                <a href="/Claims/Create" class="btn btn-primary btn-lg">Submit a Claim</a>
            </div>
        </header>

        <div class="text-center mt-4">
            <a href="#features" class="scroll-link btn btn-light btn-lg">Explore Features</a>
        </div>

        <section class="features text-center" id="features">
            <div class="container">
                <div id="featureCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="feature-box bg-light">
                                <h3>Easy Submissions</h3>
                                <p>Submit your monthly claims with just a few clicks.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="feature-box bg-light">
                                <h3>Real-time Tracking</h3>
                                <p>Track the status of your claims anytime, anywhere.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="feature-box bg-light">
                                <h3>Secure and Reliable</h3>
                                <p>Your data is safe with us, ensuring privacy and security.</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#featureCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </a>
                    <a class="carousel-control-next" href="#featureCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </a>
                </div>

                <div class="progress mt-5">
                    <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70% Complete</div>
                </div>

                <div class="counter mt-5" id="claimCount">0</div>
                <p>Claims Submitted</p>
            </div>
        </section>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2024 Contract Monthly Claim System. All rights reserved.</p>
            <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
            <div class="social-icons">
                <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.querySelectorAll('.scroll-link').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        function animateValue(id, start, end, duration) {
            var obj = document.getElementById(id);
            var range = end - start;
            var current = start;
            var increment = end > start ? 1 : -1;
            var stepTime = Math.abs(Math.floor(duration / range));

            var timer = setInterval(function () {
                current += increment;
                obj.innerHTML = current;
                if (current === end) {
                    clearInterval(timer);
                }
            }, stepTime);
        }
        animateValue("claimCount", 0, 200, 2000);
    </script>
</body>
</html>
