@model IEnumerable<ImaadProgP2.Models.Claims>

@{
    ViewBag.Title = "Approved Claims Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(28, 36, 55, 0.9)), url('/images/wallpaper2.jpg');
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-header {
            background-color: rgba(0, 51, 102, 0.9);
            padding: 50px 0;
            text-align: center;
        }

            .main-header h1 {
                color: #ffd700;
                font-size: 3rem;
                font-weight: bold;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
            }

            .main-header p {
                color: #f0e68c;
                font-size: 1.2rem;
                margin-top: 10px;
            }

        table {
            width: 90%;
            margin: 30px auto;
            border-collapse: collapse;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #007bff;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        tbody tr:nth-child(even) {
            background-color: rgba(0, 123, 255, 0.1);
        }

        tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.2);
            transform: scale(1.01);
            transition: 0.3s;
        }

        .btn {
            background-color: #ff6f61;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn:hover {
                background-color: #e65c54;
                transform: translateY(-2px);
            }

        footer {
            background-color: #0056b3;
            color: #f8f9fa;
            padding: 15px 0;
            text-align: center;
        }

            footer a {
                color: #ffdd57;
                margin: 0 10px;
                font-size: 1.5rem;
            }

                footer a:hover {
                    color: #e0e0e0;
                }
    </style>
</head>
<body>
    <header class="main-header">
        <h1>Approved Claims Report</h1>
        <p>Review and manage approved claims efficiently.</p>
    </header>

    <main>
        <table>
            <thead>
                <tr>
                    <th>Lecturer ID</th>
                    <th>Lecturer Name</th>
                    <th>Claims Period</th>
                    <th>Hours Worked</th>
                    <th>Rate Per Hour</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerID</td>
                        <td>@claim.FirstName @claim.LastName</td>
                        <td>@claim.ClaimsPeriodStart.ToShortDateString() - @claim.ClaimsPeriodEnd.ToShortDateString()</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.RatePerHour</td>
                        <td>@claim.TotalAmount</td>
                        <td class="@("status-" + claim.ApprovalStatus.ToLower())">@claim.ApprovalStatus</td>
                        <td>
                            <form asp-action="GenerateInvoice" method="post" asp-route-id="@claim.Id">
                                <button type="submit" class="btn">
                                    <i class="fa fa-file-invoice"></i> Generate Invoice
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <footer>
        <p>© 2024 Contract Monthly Claim System. All rights reserved.</p>
        <div>
            <a href="https://www.facebook.com"><i class="fab fa-facebook"></i></a>
            <a href="https://www.twitter.com"><i class="fab fa-twitter"></i></a>
            <a href="https://www.linkedin.com"><i class="fab fa-linkedin"></i></a>
            <a href="https://www.instagram.com"><i class="fab fa-instagram"></i></a>
        </div>
    </footer>
</body>
</html>
